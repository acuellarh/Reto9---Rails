<div class="container pt-2">
    <div class="row">
        <div class="col-8">
            <div>
              <h3><%= @artist.name%></h3> 
            </div>
            <div>
              <h5> Albums ( <%= @artist.albums.count%> ) </h5>  
            </div>            
              <div class="d-flex flex-wrap">
                <% @artist.albums.each do |album| %>     
                    <div class="bd-highlight" >            
                        <div class="card m-3" style="width:  9rem;">
                            <img src="<%= album.image_url %>" class="card-img-top" alt="foo_fighters">
                            <div class="card-body">
                                <p class="text-left"><%= album.name %></p>
                                <p class="card-text"><%= album.released_at.strftime("%Y") %></p>                            
                            </div>
                        </div>              
                    </div>
                 <% end %>
              </div>           
        </div>
        <div class="col-4">                   
            <div class="m-4">                            
              <%= image_tag( @artist.image_url, :size => "230x300")%>             
            </div>
        </div>
    </div> 
</div>